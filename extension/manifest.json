{
  "manifest_version": 2,
  "name": "Decoder",
  "description": "Base64 Decoder that adds some clipboard help",
  "version": "1.3",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/main.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  },
  "icons": {
    "500": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';"
}
